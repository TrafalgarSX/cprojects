{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "C/C++: cl.exe build active file",
            "command": "cl.exe",
            "args": [
                "/Zi",   //生成完整的调试信息
                "/EHsc",
                "/Fe:",  ///Fe 选项允许你为生成的可执行文件指定输出目录、输出可执行文件名称或两者
                "${fileDirname}\\out\\${fileBasenameNoExtension}.exe",
                "/I",
                "${workspaceFolder}\\include", //包含的头文件目录， 如果多个目录， 就用多个 /I参数
                "/I",
                "${workspaceFolder}\\include\\libcurl", //包含的头文件目录， 如果多个目录， 就用多个 /I参数
                "${file}",
            ],
            "problemMatcher": [
                "$msCompile"
            ],
            "group": "build",
            "detail": "Task generated by Debugger."
        }
    ]
}